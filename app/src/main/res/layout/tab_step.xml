<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="15">

    <cn.kongin.sm.roundProgressBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:radius="110dp"
        app:strokeWidth="20dp"
        app:Progress="0"
        app:totalProgress="1000"
        app:barStyle="true"
        app:ringColor="@color/ringback"
        app:bigCircleColor="@color/ring"
        android:background="@color/stepFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/stepFragment">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/run"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/torun"
            android:layout_gravity="right"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="里程"
            android:textSize="20sp"
            android:id="@+id/steplength"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卡路里"
            android:textSize="20sp"
            android:id="@+id/stepcalorie"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.10" />
    </LinearLayout>

</LinearLayout>